doctype html
html(lang='en')
 head
   title #{firstName} #{lastName}
   style.
    * {
      box-sizing: border-box;
    }
    html, body {
      margin: 0;
      padding: 0;
    }
    body {
     background-color: black;
     font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
     width: "100%";
    }
    h1, h2, h3, h4, h5, h6, p {
      margin: 0;
      padding: 0;
     color: white;
    }
    .header {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 100%;
      align-items: center;
      justify-content: center;
      background: #282828;
      min-height: 200px;
    }
    .header img {
      position: absolute;
      height: 150px;
      width: 150px;
      object-fit: cover;
      border-radius: 10000px;
      bottom: 0;
      transform: translateY(50%);
    }
    .header h1 {
      transform: translateY(-100%);
    }
    .body {
      width: 50%;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      margin-top: 120px;
      min-height: 200px;
    }
    .body .address {
      width: 100%;
      background: #282828;
      padding: 1rem;
      border: 3px solid #555;
      border-radius: 10px;
    }
    .body .content {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      gap: 2rem;
      background: #282828;
      padding: 1rem;
      border-radius: 10px;
      min-height: 200px;
    }
 body
   div.header
    h1 #{firstName} #{lastName}
    img(src=imageSrc, alt="Logo")
   div.body
    div.address
     p #{address}
    div.content
     p #{headline}
     p #{about}
